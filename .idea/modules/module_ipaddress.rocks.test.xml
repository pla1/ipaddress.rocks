<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ipaddress.rocks.test" default="compile.module.ipaddress.rocks.test">
  <dirname property="module.ipaddress.rocks.test.basedir" file="${ant.file.module_ipaddress.rocks.test}"/>
  
  <property name="module.jdk.home.ipaddress.rocks.test" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ipaddress.rocks.test" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ipaddress.rocks.test" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ipaddress.rocks.test" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="ipaddress.rocks.test.output.dir" value="undefined"/>
  <property name="ipaddress.rocks.test.testoutput.dir" value="${module.ipaddress.rocks.test.basedir}/../../build/classes/java/test"/>
  
  <path id="ipaddress.rocks.test.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ipaddress.rocks.test.module.production.classpath">
    <path refid="${module.jdk.classpath.ipaddress.rocks.test}"/>
    <pathelement location="${ipaddress.rocks.main.output.dir}"/>
    <path refid="library.gradle:_javax.servlet:javax.servlet-api:3.1.0.classpath"/>
    <path refid="library.gradle:_javax.websocket:javax.websocket-api:1.0.classpath"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="ipaddress.rocks.test.runtime.production.module.classpath">
    <path refid="ipaddress.rocks.main.runtime.production.module.classpath"/>
    <path refid="library.gradle:_javax.servlet:javax.servlet-api:3.1.0.classpath"/>
    <path refid="library.gradle:_javax.websocket:javax.websocket-api:1.0.classpath"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="ipaddress.rocks.test.module.classpath">
    <path refid="${module.jdk.classpath.ipaddress.rocks.test}"/>
    <pathelement location="${ipaddress.rocks.main.output.dir}"/>
    <path refid="library.gradle:_javax.servlet:javax.servlet-api:3.1.0.classpath"/>
    <path refid="library.gradle:_javax.websocket:javax.websocket-api:1.0.classpath"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="ipaddress.rocks.test.runtime.module.classpath">
    <pathelement location="${ipaddress.rocks.test.testoutput.dir}"/>
    <path refid="ipaddress.rocks.main.runtime.module.classpath"/>
    <path refid="library.gradle:_javax.servlet:javax.servlet-api:3.1.0.classpath"/>
    <path refid="library.gradle:_javax.websocket:javax.websocket-api:1.0.classpath"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.ipaddress.rocks.test">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ipaddress.rocks.test">
    <patternset refid="excluded.from.module.ipaddress.rocks.test"/>
  </patternset>
  
  <path id="ipaddress.rocks.test.module.test.sourcepath">
    <dirset dir="${module.ipaddress.rocks.test.basedir}/../../src/test">
      <include name="java"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ipaddress.rocks.test" depends="compile.module.ipaddress.rocks.test.production,compile.module.ipaddress.rocks.test.tests" description="Compile module ipaddress.rocks.test"/>
  
  <target name="compile.module.ipaddress.rocks.test.production" depends="register.custom.compilers,compile.module.ipaddress.rocks.main" description="Compile module ipaddress.rocks.test; production classes"/>
  
  <target name="compile.module.ipaddress.rocks.test.tests" depends="register.custom.compilers,compile.module.ipaddress.rocks.test.production" description="compile module ipaddress.rocks.test; test classes" unless="skip.tests">
    <mkdir dir="${ipaddress.rocks.test.testoutput.dir}"/>
    <javac2 destdir="${ipaddress.rocks.test.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ipaddress.rocks.test}/javac">
      <compilerarg line="${compiler.args.ipaddress.rocks.test}"/>
      <bootclasspath refid="ipaddress.rocks.test.module.bootclasspath"/>
      <classpath refid="ipaddress.rocks.test.module.classpath"/>
      <src refid="ipaddress.rocks.test.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.ipaddress.rocks.test"/>
    </javac2>
    
    <copy todir="${ipaddress.rocks.test.testoutput.dir}">
      <fileset dir="${module.ipaddress.rocks.test.basedir}/../../src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.ipaddress.rocks.test.basedir}/../../src/test/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.ipaddress.rocks.test" description="cleanup module">
    <delete dir="${ipaddress.rocks.test.output.dir}"/>
    <delete dir="${ipaddress.rocks.test.testoutput.dir}"/>
  </target>
</project>