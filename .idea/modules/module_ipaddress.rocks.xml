<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ipaddress.rocks" default="compile.module.ipaddress.rocks">
  <dirname property="module.ipaddress.rocks.basedir" file="${ant.file.module_ipaddress.rocks}"/>
  
  <property name="module.jdk.home.ipaddress.rocks" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ipaddress.rocks" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ipaddress.rocks" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ipaddress.rocks" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="ipaddress.rocks.output.dir" value="${module.ipaddress.rocks.basedir}/../../out/production/ipaddress.rocks"/>
  <property name="ipaddress.rocks.testoutput.dir" value="${module.ipaddress.rocks.basedir}/../../out/test/ipaddress.rocks"/>
  
  <path id="ipaddress.rocks.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ipaddress.rocks.module.production.classpath">
    <path refid="${module.jdk.classpath.ipaddress.rocks}"/>
  </path>
  
  <path id="ipaddress.rocks.runtime.production.module.classpath">
    <pathelement location="${ipaddress.rocks.output.dir}"/>
  </path>
  
  <path id="ipaddress.rocks.module.classpath">
    <path refid="${module.jdk.classpath.ipaddress.rocks}"/>
    <pathelement location="${ipaddress.rocks.output.dir}"/>
  </path>
  
  <path id="ipaddress.rocks.runtime.module.classpath">
    <pathelement location="${ipaddress.rocks.testoutput.dir}"/>
    <pathelement location="${ipaddress.rocks.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.ipaddress.rocks">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ipaddress.rocks">
    <patternset refid="excluded.from.module.ipaddress.rocks"/>
  </patternset>
  
  
  <target name="compile.module.ipaddress.rocks" depends="compile.module.ipaddress.rocks.production,compile.module.ipaddress.rocks.tests" description="Compile module ipaddress.rocks"/>
  
  <target name="compile.module.ipaddress.rocks.production" depends="register.custom.compilers" description="Compile module ipaddress.rocks; production classes"/>
  
  <target name="compile.module.ipaddress.rocks.tests" depends="register.custom.compilers,compile.module.ipaddress.rocks.production" description="compile module ipaddress.rocks; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ipaddress.rocks" description="cleanup module">
    <delete dir="${ipaddress.rocks.output.dir}"/>
    <delete dir="${ipaddress.rocks.testoutput.dir}"/>
  </target>
</project>